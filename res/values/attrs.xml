<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="PieGraph">
        <attr name="pieInnerCircleRatio" format="integer"/>
        <attr name="pieSlicePadding" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="LineGraph">
        <attr name="lineStrokeColor" format="color"/>
        <attr name="lineAxisColor" format="color"/>
        <attr name="lineStrokeWidth" format="dimension"/>
        <attr name="lineStrokeSpacing" format="dimension"/>
        <attr name="lineUseDip" format="boolean"/>
        <attr name="lineBackground" format="color"/>
    </declare-styleable>

    <declare-styleable name="BarGraph">
        <attr name="barAxisColor" format="color"/>
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
        <attr name="barShowAxis" format="boolean"/>
        <attr name="barShowAxisLabel" format="boolean"/>
        <attr name="barShowText" format="boolean"/>
        <attr name="barShowPopup" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="FancyButtonsAttrs">
        <attr name="defaultColor" format="color"/>
        <attr name="text" format="string"/>

        <attr name="textColor1" format="color"/>

        <attr name="textFont" format="string"/>
        <attr name="iconFont" format="string"/>

        <attr name="textSize" format="dimension"/>
        <attr name="iconResource" format="integer"/>
        <attr name="fontIconResource" format="string"/>
        <attr name="fontIconSize" format="dimension"/>
        <attr name="iconPosition" format="enum">
            <enum name="left" value="1"/>
            <enum name="right" value="2"/>
            <enum name="top" value="3"/>
            <enum name="bottom" value="4"/>
        </attr>
        <attr name="borderColor" format="color"/>
        <attr name="borderWidth" format="dimension"/>
        <attr name="focusColor" format="color"/>
        <attr name="radius" format="dimension"/>
    </declare-styleable>

    <integer name="inner_circle_ratio">190</integer>

</resources>