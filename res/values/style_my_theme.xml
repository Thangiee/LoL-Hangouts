<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyTheme" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/MyTheme.ActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/MyTheme.ActionButton.Overflow</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_navigation_previous</item>
        <item name="android:listViewStyle">@style/MyTheme.listView</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:listSeparatorTextViewStyle">@style/PreferenceListHeader</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
    </style>

    <style name="MyTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_background</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleText</item>
    </style>

    <style name="MyTheme.ActionBar.TitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/action_bar_text_color</item>
    </style>

    <style name="MyTheme.ActionButton.Overflow" parent="@android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow_round</item>
    </style>

    <style name="MyTheme.listView" parent="android:Widget.ListView">
        <item name="android:divider">@color/my_orange</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar</item>
        <item name="android:background">@color/my_dark_blue</item>
    </style>

    <!--setting category header-->
    <style name="Widget.TextView.ListSeparator" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="PreferenceListHeader" parent="Widget.TextView.ListSeparator">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">18sp</item>
        <item name="android:drawableBottom">@drawable/section_header</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingLeft">12dp</item>
    </style>
    <!---->
</resources>