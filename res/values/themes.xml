<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/window_background</item>

        <item name="colorSwitchThumbNormal">@color/md_grey_300</item>
        <item name="android:colorForeground">@color/md_grey_600</item>

        <item name="searchViewStyle">@style/MySearchViewStyle</item>
        <item name="android:actionBarTabBarStyle">@style/MyActionBarStyle</item>
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView"/>

    <style name="MyActionBarStyle" parent="AppTheme.Base">
        <item name="android:textColorPrimary">@color/abc_primary_text_material_dark</item>
        <item name="android:textColorSecondary">@color/abc_secondary_text_material_dark</item>
    </style>

    <style name="FriendListStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">@dimen/native_list_card_margin_top</item>
        <item name="android:paddingBottom">@dimen/native_list_card_margin_bottom</item>
    </style>

</resources>