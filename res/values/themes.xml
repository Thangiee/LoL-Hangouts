<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/window_background</item>

        <item name="colorSwitchThumbNormal">@color/md_grey_300</item>
        <item name="android:colorForeground">@color/md_grey_600</item>

        <item name="searchViewStyle">@style/MySearchViewStyle</item>
        <item name="android:actionBarTabBarStyle">@style/MyActionBarStyle</item>
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView"/>

    <style name="MyActionBarStyle" parent="AppTheme.Base">
        <item name="android:textColorPrimary">@color/abc_primary_text_material_dark</item>
        <item name="android:textColorSecondary">@color/abc_secondary_text_material_dark</item>
    </style>

    <!-- setting screen -->
    <style name="PreferenceScreenStyle" parent="AppTheme.Base">
        <item name="android:listSeparatorTextViewStyle">@style/PrefCategoryHeaderStyle</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>

    <!--setting category header-->
    <style name="PrefCategoryHeaderStyle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:drawableBottom">@drawable/section_header</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingLeft">12dp</item>
    </style>

</resources>