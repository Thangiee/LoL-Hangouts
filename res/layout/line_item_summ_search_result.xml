<?xml version="1.0" encoding="utf-8"?>

<com.andexert.library.RippleView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ripple="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ripple:rv_type="rectangle"
        ripple:rv_color="@color/md_grey_500"
        ripple:rv_zoom="true"
        ripple:rv_framerate="10"
        ripple:rv_rippleDuration="0"
        >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <at.markushi.ui.RevealColorView
                android:id="@+id/reveal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/md_white"/>

        <TextView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/tv_summ_name"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:textSize="16sp"
                android:textColor="@color/primary_text"
                android:gravity="center_vertical"
                android:text="16sp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="72dp"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_suggestion_icon"
                android:gravity="center_vertical"
                android:src="@drawable/ic_action_history"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="8dp"/>
    </RelativeLayout>
</com.andexert.library.RippleView>