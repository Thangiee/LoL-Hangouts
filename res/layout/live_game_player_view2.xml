<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="8dp"
              android:paddingBottom="8dp"
        >


    <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/img_live_game_champ"
            android:src="@drawable/league_icon"
            android:layout_below="@+id/tv_live_game_name"
            android:layout_alignStart="@+id/textView4"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tv_live_game_name"
            android:visibility="visible"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/img_live_game_champ"
            android:layout_alignStart="@+id/img_live_game_champ"
            android:textStyle="bold"
            android:textColor="@android:color/holo_purple"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:id="@+id/tv_live_game_elo"
            android:gravity="center"
            android:minWidth="164dp"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@+id/img_s4_badge"
            android:textSize="28sp"
            android:layout_above="@+id/textView5"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S4 info"
            android:id="@+id/tv_live_game_s4_leag_info"
            android:layout_below="@+id/img_s4_badge"
            android:layout_alignLeft="@+id/img_s4_badge"
            android:layout_alignStart="@+id/img_s4_badge"
            android:layout_alignRight="@+id/textView2"
            android:layout_alignEnd="@+id/textView2"
            android:gravity="center"
            android:visibility="visible"
            android:textSize="11sp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="W"
            android:id="@+id/tv_live_game_normal_w"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:gravity="center"
            android:layout_below="@+id/textView4"
            android:layout_alignRight="@+id/textView4"
            android:layout_alignEnd="@+id/textView4"/>

    <TextView
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:text="rank W/L"
            android:id="@+id/tv_live_game_rank_w_l"
            android:gravity="center"
            android:layout_alignTop="@+id/tv_live_game_kda"
            android:layout_centerHorizontal="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tv_live_game_kda"
            android:gravity="center"
            android:layout_below="@+id/textView6"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:layout_alignRight="@+id/textView6"
            android:layout_alignEnd="@+id/textView6"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Rank Elo"
            android:id="@+id/textView"
            android:layout_below="@+id/tv_live_game_name"
            android:layout_centerHorizontal="true"
            android:textColor="@color/my_orange"
            android:textStyle="bold"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="S4 Rank"
            android:id="@+id/textView2"
            android:layout_alignTop="@+id/textView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:textColor="@color/my_orange"
            android:textStyle="bold"
            android:visibility="visible"/>

    <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/img_s4_badge"
            android:layout_below="@+id/textView2"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:src="@drawable/league_icon"
            android:layout_alignRight="@+id/textView2"
            android:layout_alignEnd="@+id/textView2"
            android:visibility="visible"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Normal"
            android:id="@+id/textView4"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_marginTop="102dp"
            android:layout_marginLeft="12dp"
            android:textColor="@color/my_orange"
            android:textStyle="bold"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ranked"
            android:id="@+id/textView5"
            android:layout_alignTop="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:textColor="@color/my_orange"
            android:textStyle="bold"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="KDA"
            android:id="@+id/textView6"
            android:layout_alignTop="@+id/textView5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="8dp"
            android:layout_alignLeft="@+id/tv_live_game_s4_leag_info"
            android:layout_alignStart="@+id/tv_live_game_s4_leag_info"
            android:gravity="center"
            android:textColor="@color/my_orange"
            android:textStyle="bold"/>

    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="View Profile"
            android:background="@drawable/league_btn_selector"
            android:id="@+id/btn_live_game_profile"
            android:layout_below="@+id/tv_live_game_rank_w_l"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:id="@+id/img_live_game_series"
            android:layout_below="@+id/img_live_game_champ"
            android:layout_alignLeft="@+id/img_live_game_champ"
            android:layout_alignStart="@+id/img_live_game_champ"
            android:layout_alignRight="@+id/img_live_game_champ"
            android:layout_alignEnd="@+id/img_live_game_champ"
            />

</RelativeLayout>