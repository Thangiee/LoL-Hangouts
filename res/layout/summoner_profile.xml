<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/my_dark_blue">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/header"
            android:background="@drawable/summoner_header"
            android:layout_margin="8dp">

        <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/img_profile_icon"
                android:src="@drawable/league_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="name"
                android:id="@+id/tv_profile_name"
                android:layout_alignTop="@+id/img_profile_icon"
                android:layout_toRightOf="@+id/img_profile_icon"
                android:textSize="22sp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level"
                android:id="@+id/tv_profile_lvl"
                android:textSize="16sp"
                android:layout_alignBottom="@+id/img_profile_icon"
                android:layout_toRightOf="@+id/img_profile_icon"/>

    </RelativeLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Ranked Solo Queue"
            android:id="@+id/textView"
            android:layout_below="@+id/header"
            android:layout_alignLeft="@+id/header"
            android:layout_alignStart="@+id/header"
            android:layout_marginBottom="4dp"
            android:layout_alignRight="@+id/header"
            android:layout_alignEnd="@+id/header"
            android:gravity="center"/>

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp">

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout"
                android:background="@drawable/bg_sq_league_paper"
                >

            <com.echo.holographlibrary.PieGraph
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:id="@+id/pie_graph_win_rate"
                    android:layout_below="@+id/tv_profile_tier"
                    android:layout_toRightOf="@+id/img_profile_badge"
                    android:layout_marginTop="8dp"/>

            <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/img_profile_badge"
                    android:src="@drawable/badge_bronze"
                    android:layout_below="@+id/tv_profile_tier"
                    android:layout_alignRight="@+id/center"
                    android:layout_alignEnd="@+id/center"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="tier divison"
                    android:id="@+id/tv_profile_tier"
                    android:textColor="#A68FE6"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginTop="28dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="League"
                    android:id="@+id/tv_profile_league_name"
                    android:textSize="20sp"
                    android:textColor="#8e8058"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/pie_graph_win_rate"
                    android:layout_marginTop="16dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="points"
                    android:id="@+id/tv_profile_league_point"
                    android:textSize="19sp"
                    android:textColor="#8e8058"
                    android:visibility="visible"
                    android:layout_below="@+id/tv_profile_league_name"
                    android:layout_centerHorizontal="true"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="KDA"
                    android:id="@+id/tv_profile_kda"
                    android:textSize="18sp"
                    android:textColor="#8e8058"
                    android:visibility="visible"
                    android:layout_below="@+id/tv_profile_league_point"
                    android:layout_centerHorizontal="true"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/center"
                    android:layout_centerInParent="true"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_below="@+id/linearLayout"
                    android:layout_toRightOf="@+id/img_profile_badge"
                    android:layout_alignRight="@+id/pie_graph_win_rate"
                    android:layout_alignEnd="@+id/pie_graph_win_rate">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/red"
                        android:text="Lost"
                        android:id="@+id/tv_profile_lost"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:gravity="right"
                        android:paddingRight="2dp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:id="@+id/textView2"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@android:color/holo_purple"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Win0"
                        android:id="@+id/tv_profile_win"
                        android:textColor="@android:color/holo_green_dark"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:paddingLeft="2dp"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/pie_graph_win_rate"
                    android:layout_marginTop="55dp"
                    android:layout_toRightOf="@+id/img_profile_badge"
                    android:layout_alignRight="@+id/pie_graph_win_rate"
                    android:layout_alignEnd="@+id/pie_graph_win_rate"
                    android:id="@+id/linearLayout">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="win rate"
                        android:id="@+id/tv_profile_rate"
                        android:textSize="18sp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:gravity="center"/>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>