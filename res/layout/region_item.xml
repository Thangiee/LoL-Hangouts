<?xml version="1.0" encoding="utf-8"?>

<com.andexert.library.RippleView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ripple="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        ripple:rv_type="rectangle"
        ripple:rv_color="@color/md_grey_500"
        ripple:rv_zoom="true"
        ripple:rv_framerate="10"
        ripple:rv_rippleDuration="0"
        >

    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <at.markushi.ui.RevealColorView
                android:id="@+id/reveal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/window_background"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/region_name"
                android:textSize="16sp"
                android:id="@+id/tv_region_name"
                android:layout_marginLeft="72dp"
                android:textIsSelectable="false"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="20dp"
                />

        <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/north_america"
                android:id="@+id/im_flag"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="16dp"
                />
    </RelativeLayout>
</com.andexert.library.RippleView>