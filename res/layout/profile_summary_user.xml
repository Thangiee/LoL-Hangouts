<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
        >

    <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/profile_summ_user_icon"
            android:src="@drawable/ic_load_unknown"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Summoner Name"
            android:id="@+id/profile_summ_user_name"
            android:layout_alignTop="@+id/profile_summ_user_icon"
            android:layout_toRightOf="@+id/profile_summ_user_icon"
            android:layout_toEndOf="@+id/profile_summ_user_icon"
            android:textColor="@color/accent"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Region - Level 30"
            android:id="@+id/profile_summ_user_reg_lvl"
            android:layout_below="@+id/profile_summ_user_name"
            android:layout_toRightOf="@+id/profile_summ_user_icon"
            android:layout_toEndOf="@+id/profile_summ_user_icon"
            />
</RelativeLayout>