<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="168dp"
                android:background="@drawable/bg_league_paper">

    <ImageView
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:id="@+id/img_badge"
            android:layout_marginLeft="8dp"
            android:src="@drawable/badge_unranked"/>

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textColor="@android:color/holo_green_dark"
            android:id="@+id/tv_status_msg"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/img_badge"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:layout_marginTop="16dp"
            />

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tv_level"
            android:layout_below="@+id/tv_status_msg"
            android:textColor="@android:color/darker_gray"
            android:layout_toRightOf="@+id/img_badge"
            android:gravity="center_horizontal"
            android:singleLine="true"
            />

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textColor="@android:color/holo_orange_dark"
            android:id="@+id/tv_rank_tier"
            android:layout_below="@+id/tv_level"
            android:layout_toRightOf="@+id/img_badge"
            android:gravity="center_horizontal"
            android:singleLine="true"
            />

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textColor="@android:color/holo_orange_dark"
            android:id="@+id/tv_league_name"
            android:layout_below="@+id/tv_rank_tier"
            android:layout_toRightOf="@+id/img_badge"
            android:gravity="center_horizontal"
            android:singleLine="true"
            />

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textColor="@android:color/holo_orange_dark"
            android:id="@+id/tv_wins"
            android:layout_below="@+id/tv_league_name"
            android:layout_toRightOf="@+id/img_badge"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:layout_marginBottom="16dp"
            />

    <Button
            android:layout_width="56dp"
            android:layout_height="24dp"
            android:text="View"
            android:id="@+id/bbb"
            android:background="@drawable/league_btn_selector"
            android:textSize="14dp"
            android:layout_marginLeft="23dp"
            android:layout_below="@+id/imageView"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            android:layout_marginTop="6dp"/>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:id="@+id/imageView"
            android:layout_gravity="bottom"
            android:background="@drawable/text_divider"
            android:layout_below="@+id/img_badge"
            android:layout_alignRight="@+id/tv_wins"
            android:layout_alignEnd="@+id/tv_wins"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>

</RelativeLayout>