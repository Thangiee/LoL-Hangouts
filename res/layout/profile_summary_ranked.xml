<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/ranked"
                android:id="@+id/tv_ranked_title"
                android:textColor="@color/accent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                />

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_alignTop="@+id/tv_ranked_title"
                android:layout_alignLeft="@+id/tv_ranked_title"
                android:layout_alignStart="@+id/tv_ranked_title"
                android:id="@+id/linearLayout4"
                >

                <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/profile_summ_rank_badge"
                        android:src="@drawable/badge_unranked"
                        android:layout_weight="1"
                        />

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        >

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Solo/Duo"
                                android:id="@+id/tv_solo_duo_title"
                                android:layout_marginTop="32dp"
                                android:textColor="@color/accent"
                                />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Challenger I"
                                android:id="@+id/profile_summ_rank_league"
                                android:textColor="@color/primary_text"
                                />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="100 LP"
                                android:id="@+id/profile_summ_rank_lp"
                                />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="999 Wins"
                                android:id="@+id/profile_summ_rank_wins"
                                />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="450 ELO"
                                android:id="@+id/profile_summ_rank_elo"
                                />
                </LinearLayout>
        </LinearLayout>

</RelativeLayout>