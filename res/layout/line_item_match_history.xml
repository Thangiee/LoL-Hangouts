<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:minWidth="25dp"
        >

        <View android:layout_width="wrap_content"
              android:layout_height="1dp"
              android:layout_alignBottom="@+id/img_match_champ"
              android:layout_toRightOf="@+id/img_match_champ"
              android:background="@color/divider"
              android:id="@+id/divider"
                />

    <ImageView
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:id="@+id/img_match_champ"
            android:src="@drawable/league_icon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="true"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="K"
            android:id="@+id/tv_match_avg_k"
            android:minWidth="27dp"
            android:textSize="12dp"
            android:layout_below="@+id/tv_match_perf"
            android:layout_alignLeft="@+id/tv_match_avg_d"
            android:layout_alignStart="@+id/tv_match_avg_d"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="D"
            android:id="@+id/tv_match_avg_d"
            android:minWidth="27dp"
            android:textSize="12dp"
            android:layout_below="@+id/tv_match_avg_k"
            android:layout_alignLeft="@+id/tv_match_avg_a"
            android:layout_alignStart="@+id/tv_match_avg_a"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="A0"
            android:id="@+id/tv_match_avg_a"
            android:minWidth="27dp"
            android:textSize="12dp"
            android:layout_below="@+id/tv_match_avg_d"
            android:layout_alignLeft="@+id/tv_match_avg_cs"
            android:layout_alignStart="@+id/tv_match_avg_cs"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="CS"
            android:id="@+id/tv_match_avg_cs"
            android:minWidth="27dp"
            android:textSize="12dp"
            android:layout_below="@+id/tv_match_avg_a"
            android:gravity="bottom"
            android:layout_toLeftOf="@+id/tv_match_avg_more_cs"
            android:layout_toStartOf="@+id/tv_match_avg_more_cs"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="K"
            android:id="@+id/tv_match_avg_more_k"
            android:textSize="12dp"
            android:gravity="center_horizontal"
            android:layout_below="@+id/tv_match_perf"
            android:layout_alignLeft="@+id/tv_match_avg_more_d"
            android:layout_alignStart="@+id/tv_match_avg_more_d"
            android:layout_alignRight="@+id/tv_match_avg_more_d"
            android:layout_alignEnd="@+id/tv_match_avg_more_d"
                />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="D"
            android:id="@+id/tv_match_avg_more_d"
            android:textSize="12dp"
            android:gravity="center_horizontal"
            android:layout_above="@+id/tv_match_avg_a"
            android:layout_alignLeft="@+id/tv_match_avg_more_a"
            android:layout_alignStart="@+id/tv_match_avg_more_a"
            android:layout_alignRight="@+id/tv_match_avg_more_a"
            android:layout_alignEnd="@+id/tv_match_avg_more_a"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="A"
            android:id="@+id/tv_match_avg_more_a"
            android:textSize="12dp"
            android:gravity="center_horizontal"
            android:layout_below="@+id/tv_match_avg_more_d"
            android:layout_alignLeft="@+id/tv_match_avg_more_cs"
            android:layout_alignStart="@+id/tv_match_avg_more_cs"
            android:layout_alignRight="@+id/tv_match_avg_more_cs"
            android:layout_alignEnd="@+id/tv_match_avg_more_cs"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="CS"
            android:id="@+id/tv_match_avg_more_cs"
            android:textSize="12dp"
            android:layout_below="@+id/tv_match_avg_more_a"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:minWidth="30dp"
            android:gravity="center_horizontal"
            android:layout_marginRight="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="perf"
            android:id="@+id/tv_match_perf"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/tv_match_avg_k"
            android:layout_alignStart="@+id/tv_match_avg_k"
            android:textSize="12dp"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Normal 5v5"
            android:id="@+id/tv_match_type"
            android:minWidth="100dp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Win"
            android:id="@+id/tv_match_outcome"
            android:layout_below="@+id/tv_match_type"
            android:layout_alignRight="@+id/tv_match_type"
            android:layout_alignEnd="@+id/tv_match_type"
            android:gravity="center"
            android:layout_alignLeft="@+id/tv_match_type"
            android:layout_alignStart="@+id/tv_match_type"
            android:textSize="16sp"
            android:textStyle="bold"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="3 days agon"
            android:id="@+id/tv_match_date"
            android:layout_below="@+id/tv_match_outcome"
            android:layout_alignRight="@+id/tv_match_outcome"
            android:layout_alignEnd="@+id/tv_match_outcome"
            android:gravity="center"
            android:layout_alignLeft="@+id/tv_match_outcome"
            android:layout_alignStart="@+id/tv_match_outcome"
            android:textSize="14sp"
            android:textIsSelectable="true"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="= 55 mins"
            android:id="@+id/tv_match_len"
            android:layout_below="@+id/tv_match_date"
            android:layout_alignRight="@+id/tv_match_date"
            android:layout_alignEnd="@+id/tv_match_date"
            android:gravity="center"
            android:layout_alignLeft="@+id/tv_match_date"
            android:layout_alignStart="@+id/tv_match_date"
            android:textSize="14sp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

    <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:id="@+id/imageView"
            android:src="@drawable/ic_preformace_graph"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/tv_match_perf"
            android:layout_marginRight="4dp"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_above="@+id/tv_match_avg_d"
            android:layout_toLeftOf="@+id/tv_match_avg_k"
            android:src="@drawable/ic_kills"
            android:layout_below="@+id/tv_match_perf"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            android:layout_marginRight="4dp"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:layout_below="@+id/tv_match_avg_k"
            android:layout_toLeftOf="@+id/tv_match_avg_d"
            android:src="@drawable/ic_deaths"
            android:layout_alignBottom="@+id/tv_match_avg_d"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_alignStart="@+id/imageView2"
            android:layout_marginRight="4dp"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:src="@drawable/ic_assists"
            android:layout_alignTop="@+id/tv_match_avg_a"
            android:layout_alignRight="@+id/imageView3"
            android:layout_alignEnd="@+id/imageView3"
            android:layout_above="@+id/tv_match_avg_cs"
            android:layout_alignLeft="@+id/imageView3"
            android:layout_alignStart="@+id/imageView3"
            android:layout_marginRight="4dp"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView5"
            android:layout_below="@+id/tv_match_avg_a"
            android:layout_toLeftOf="@+id/tv_match_avg_cs"
            android:src="@drawable/ic_cs"
            android:layout_alignLeft="@+id/imageView4"
            android:layout_alignStart="@+id/imageView4"
            android:layout_marginRight="4dp"/>

    <ImageView
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:id="@+id/rect"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/img_match_champ"
            android:layout_toEndOf="@+id/img_match_champ"
            android:background="@color/primary"
            android:layout_above="@+id/divider"
            android:alpha=".5"
            />

</RelativeLayout>