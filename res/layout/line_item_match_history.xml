<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        >

    <ImageView
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:id="@+id/img_match_champ"
            android:src="@drawable/league_icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/tv_champ_name"
            android:layout_alignBottom="@+id/img_match_champ"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/img_match_champ"
            android:layout_alignEnd="@+id/img_match_champ"
            android:textSize="11sp"
            android:background="#7a000000"
            android:textColor="@color/md_grey_300"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:ellipsize="end"
            android:enabled="true"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Normal 5v5"
            android:id="@+id/tv_match_type"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/rect"
            android:layout_toEndOf="@+id/rect"
            android:textSize="14dp"
            android:layout_marginLeft="8dp"
            android:gravity="top"
            android:textColor="@color/primary_text"
            />

    <ImageView
            android:layout_width="6dp"
            android:layout_height="10dp"
            android:id="@+id/rect"
            android:background="@color/primary"
            android:layout_alignParentLeft="false"
            android:layout_toRightOf="@+id/img_match_champ"
            android:layout_alignTop="@+id/img_match_champ"
            android:layout_alignBottom="@+id/img_match_champ"
            />

    <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:id="@+id/imageView10"
            android:src="@drawable/ic_cs"
            android:layout_below="@+id/imageView12"
            android:layout_alignRight="@+id/imageView12"
            android:layout_alignEnd="@+id/imageView12"/>

    <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:id="@+id/imageView11"
            android:src="@drawable/ic_gold"
            android:layout_alignTop="@+id/imageView10"
            android:layout_toRightOf="@+id/tv_match_cs"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"/>

    <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:id="@+id/imageView12"
            android:src="@drawable/ic_kills"
            android:layout_below="@+id/tv_match_type"
            android:layout_alignLeft="@+id/tv_match_type"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="K/D/A"
            android:id="@+id/tv_match_kda"
            android:layout_toRightOf="@+id/imageView12"
            android:layout_toEndOf="@+id/imageView12"
            android:layout_alignTop="@+id/imageView12"
            android:textSize="12dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="1000"
            android:id="@+id/tv_match_cs"
            android:layout_below="@+id/imageView12"
            android:layout_alignLeft="@+id/tv_match_kda"
            android:layout_alignStart="@+id/tv_match_kda"
            android:minWidth="16dp"
            android:textSize="12dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="10k"
            android:id="@+id/tv_match_gold"
            android:layout_below="@+id/imageView12"
            android:layout_toRightOf="@+id/imageView11"
            android:layout_toEndOf="@+id/imageView11"
            android:textSize="12dp"/>

    <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="2"
            android:paddingLeft="54dp"
            android:id="@+id/gridLayout"
            android:layout_centerInParent="true"
            android:paddingTop="12dp">

        <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:id="@+id/img_match_item1"
                android:src="@drawable/item_unknown"
                android:layout_margin="1dp"/>

        <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:id="@+id/img_match_item2"
                android:src="@drawable/item_unknown"
                android:layout_margin="1dp"/>

        <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:id="@+id/img_match_item3"
                android:src="@drawable/item_unknown"
                android:layout_margin="1dp"/>

        <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:id="@+id/img_match_item4"
                android:src="@drawable/item_unknown"
                android:layout_margin="1dp"/>

        <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:id="@+id/img_match_item5"
                android:src="@drawable/item_unknown"
                android:layout_margin="1dp"/>

        <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:id="@+id/img_match_item6"
                android:src="@drawable/item_unknown"
                android:layout_margin="1dp"/>
    </GridLayout>

    <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:id="@+id/img_match_trinket"
            android:layout_toRightOf="@+id/gridLayout"
            android:layout_toEndOf="@+id/gridLayout"
            android:src="@drawable/trinket_empty"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="1dp"/>

    <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:columnCount="1"
            android:rowCount="2">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50:00"
                android:layout_gravity="center"
                android:id="@+id/tv_match_len"
                android:gravity="center"
                android:textSize="14sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aug 16, 2015"
                android:id="@+id/tv_match_date"
                android:textSize="12sp"
                />
    </GridLayout>

</RelativeLayout>
