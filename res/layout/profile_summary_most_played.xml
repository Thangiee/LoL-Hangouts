<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
        >

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/most_played"
            android:id="@+id/tv_most_played_title"
            android:textColor="@color/accent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="4dp"
            />

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_most_played_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:weightSum="4"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            >

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                >

            <com.thangiee.lolhangouts.ui.custom.ChampIconView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/profile_summ_champ_icon1"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="0/0/0"
                    android:id="@+id/profile_summ_champ_kda1"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Games:0"
                    android:id="@+id/profile_summ_champ_games1"
                    />
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                >

            <com.thangiee.lolhangouts.ui.custom.ChampIconView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/profile_summ_champ_icon2"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="0/0/0"
                    android:id="@+id/profile_summ_champ_kda2"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Games:0"
                    android:id="@+id/profile_summ_champ_games2"
                    />
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                >

            <com.thangiee.lolhangouts.ui.custom.ChampIconView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/profile_summ_champ_icon3"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="0/0/0"
                    android:id="@+id/profile_summ_champ_kda3"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Games:0"
                    android:id="@+id/profile_summ_champ_games3"
                    />
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                >

            <com.thangiee.lolhangouts.ui.custom.ChampIconView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/profile_summ_champ_icon4"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="0/0/0"
                    android:id="@+id/profile_summ_champ_kda4"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Games:0"
                    android:id="@+id/profile_summ_champ_games4"
                    />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>