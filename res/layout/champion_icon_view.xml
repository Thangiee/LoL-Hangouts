<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/img_champ_icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_load_unknown"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/tv_champ_name"
            android:layout_alignBottom="@+id/img_champ_icon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/img_champ_icon"
            android:layout_alignEnd="@+id/img_champ_icon"
            android:textSize="10dp"
            android:background="#7a000000"
            android:textColor="@color/md_grey_300"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:ellipsize="end"
            android:enabled="true"
            />
</RelativeLayout>