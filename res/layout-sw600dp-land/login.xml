<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:progress="http://schemas.android.com/apk/res-auto"
                xmlns:makeramen="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/img_login_bg"
            android:scaleType="centerCrop"/>

    <RelativeLayout
            android:layout_width="480dp"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout"
            android:layout_alignParentStart="false"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dp">

        <com.makeramen.RoundedImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/login_fields_bg"
                makeramen:corner_radius="18dip"
                android:alpha=".7"
                android:clickable="false"
                android:src="@color/my_dark_blue"
                android:layout_alignParentStart="false"
                android:scaleType="center"
                android:layout_alignBottom="@+id/ancher"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"/>

        <EditText
                android:id="@+id/et_username"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/username_hint"
                android:singleLine="true"
                android:layout_below="@+id/textView"
                android:textColor="@color/white"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:textSize="22dp"/>

        <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:password="true"
                android:hint="@string/password_hint"
                android:phoneNumber="false"
                android:singleLine="true"
                android:textColorLink="@color/black"
                android:layout_below="@+id/et_username"
                android:layout_alignLeft="@+id/et_username"
                android:layout_alignStart="@+id/et_username"
                android:layout_alignRight="@+id/et_username"
                android:layout_alignEnd="@+id/et_username"
                android:textColor="@color/white"
                android:layout_alignParentStart="false"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textSize="22dp"/>

        <com.dd.CircularProgressButton
                android:id="@+id/btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/white"
                progress:cpb_cornerRadius="18dp"
                progress:cpb_iconComplete="@drawable/ic_action_accept"
                progress:cpb_iconError="@drawable/ic_action_cancel"
                progress:cpb_textIdle="LogIn"
                progress:cpb_selectorIdle="@drawable/idle_state_selector"
                progress:cpb_colorIndicator="@color/blue"
                progress:cpb_colorIndicatorBackground="@color/gray"
                progress:cpb_colorProgress="@android:color/transparent"
                android:layout_alignBottom="@+id/cb_offline_login"
                android:layout_alignRight="@+id/et_password"
                android:layout_alignEnd="@+id/et_password"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@+id/ancher"
                android:layout_marginLeft="8dp"/>

        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Username"
                android:id="@+id/cb_save_user"
                android:checked="false"
                android:textColor="@color/white"
                android:layout_below="@+id/et_password"
                android:layout_alignLeft="@+id/et_password"
                android:layout_alignStart="@+id/et_password"
                android:paddingRight="16dp"
                android:layout_alignParentStart="false"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:textSize="22dp"/>

        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save password"
                android:id="@+id/cb_save_pass"
                android:checked="false"
                android:textColor="@color/white"
                android:layout_below="@+id/cb_save_user"
                android:layout_alignLeft="@+id/cb_save_user"
                android:layout_alignStart="@+id/cb_save_user"
                android:layout_alignParentStart="false"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:textSize="22dp"/>

        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login as offline"
                android:id="@+id/cb_offline_login"
                android:layout_below="@+id/cb_save_pass"
                android:layout_alignLeft="@+id/cb_save_pass"
                android:layout_alignStart="@+id/cb_save_pass"
                android:layout_alignRight="@+id/cb_save_user"
                android:layout_alignEnd="@+id/cb_save_user"
                android:textColor="@color/white"
                android:checked="false"
                android:layout_alignParentStart="false"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="68dp"
                android:textSize="22dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="ACCOUNT LOGIN"
                android:id="@+id/textView"
                android:textColor="@color/light_blue"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/et_username"
                android:layout_alignStart="@+id/et_username"
                android:layout_marginTop="68dp"
                android:textSize="22dp"
                android:layout_marginBottom="16dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:id="@+id/ancher"
                android:layout_below="@+id/cb_offline_login"
                android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</RelativeLayout>