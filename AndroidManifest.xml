<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.thangiee.LoLHangouts"
          android:versionCode="1420"
          android:versionName="@string/app_version">

    <uses-sdk
            android:minSdkVersion="14"
            android:targetSdkVersion="21"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="com.android.vending.BILLING"/>

    <application
            android:label="@string/app_name"
            android:theme="@style/MyTheme"
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher"
            android:name="com.thangiee.LoLHangouts.MyApplication">
        <meta-data
                android:name="AA_DB_NAME"
                android:value="MessageLogs.db"/>

        <meta-data
                android:name="com.google.android.gms.version"
                android:value="@integer/google_play_services_version"/>

        <service android:name="com.thangiee.LoLHangouts.services.LoLHangoutsService"/>

        <activity
                android:name="com.thangiee.LoLHangouts.activities.LoginActivity"
                android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:name="com.thangiee.LoLHangouts.activities.RegionSelectionActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:label="@string/app_name"
                android:noHistory="true"/>

        <activity
                android:name="com.thangiee.LoLHangouts.activities.MainActivity"
                android:label="@string/app_name"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:launchMode="singleTop"/>

        <activity
                android:name="com.thangiee.LoLHangouts.activities.PreferenceSettings"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:label="Settings">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".activities.MainActivity"/>
        </activity>

        <activity
                android:name="com.thangiee.LoLHangouts.activities.ViewOtherSummonerActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:label="@string/app_name"/>

        <activity
                android:name="com.thangiee.LoLHangouts.activities.AboutActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:label="@string/app_name"/>

        <activity
                android:name="com.thangiee.LoLHangouts.activities.ViewLiveGameStatsActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:label="@string/app_name"/>

        <activity
                android:name="com.thangiee.LoLHangouts.activities.QuickChatActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:label="@string/app_name"/>

        <activity
                android:name="com.google.android.gms.ads.AdActivity"
                android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>

        <receiver android:name="com.thangiee.LoLHangouts.receivers.DeleteOldMsgReceiver"/>
    </application>
</manifest>
